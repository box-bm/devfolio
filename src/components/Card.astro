---
interface Props {
  pressable?: boolean;
}

const { pressable } = Astro.props;
---

<div class:list={`card ${pressable ? "pressable-card" : ""}`}>
  <slot />
</div>

<style>
  .card {
    height: 100%;
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    border: 1px solid var(--neutral-medium);
    border-style: solid;
    border-width: 1px;
    padding: 20px;
    gap: 8px;
    transition: all ease 250ms;
  }

  .pressable-card {
    cursor: pointer;
  }

  .pressable-card:hover {
    border-color: var(--neutral-dark);
    background-color: var(--neutral-medium);
  }
</style>
