---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import LanguagePicker from "@components/LanguagePicker.astro";
import { MenuIcon } from "@lucide/astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="header-container">
  <a class="header-link--brand" href={`/${lang}`}>BoxDev</a>
  <div class="header-links">
    <a class="header-link" href="#about">{t("nav.about")}</a>
    <a class="header-link" href="#projects">{t("nav.project")}</a>
    <a class="header-link" href="#contact">{t("nav.contact")}</a>
  </div>
  <div class="header-right">
    <LanguagePicker />
    <div class="menu-icon">
      <MenuIcon />
    </div>
  </div>
  <div class="mobile-menu">
    <ul class="mobile-menu-links">
      <a class="header-link--brand" href="/" target="_top">BoxDev</a>
      <li><a class="header-link" href="#about">{t("nav.about")}</a></li>
      <li><a class="header-link" href="#projects">{t("nav.project")}</a></li>
      <li><a class="header-link" href="#contact">{t("nav.contact")}</a></li>
    </ul>
  </div>
</header>

<style>
  .header-container {
    z-index: 2000;
    display: flex;
    padding: 16px;
    flex-direction: row;
    justify-content: space-between;
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background-color: var(--neutral-white);
    height: 60px;
    align-items: center;
    border-bottom: 1px solid var(--neutral-light);
    transition: transform 0.3s ease;
  }

  .header-container.hide {
    transform: translateY(-100%);
  }

  .header-links {
    display: flex;
    flex-direction: row;
    gap: 16px;
  }

  .header-right {
    display: flex;
    flex-direction: row;
    gap: 16px;
    align-items: center;
  }

  .header-link {
    color: var(--neutral-black);
  }

  .header-link--brand {
    text-decoration: none;
    color: var(--accent-primary);
  }

  .menu-icon {
    display: none;
    padding: 4px 8px;
  }

  .mobile-menu {
    position: absolute;
    top: 59px;
    right: 0;
    left: 0;
    background-color: var(--neutral-white);
    padding: 20px 16px;
    z-index: 1000;
    border-bottom: 1px solid var(--neutral-light);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    opacity: 0;
    transform: translateY(-8px);
    pointer-events: none;

    transition:
      opacity 0.25s ease,
      transform 0.25s ease;
  }

  .mobile-menu.open {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .mobile-menu-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: flex-end;
  }

  @media (max-width: 600px) {
    .header-links {
      display: none;
    }

    .menu-icon {
      display: flex;
      cursor: pointer;
      align-items: center;
      justify-content: center;
    }
  }
</style>

<script>
  const menuIcon = document.querySelector(".menu-icon");
  const mobileMenu = document.querySelector(".mobile-menu");

  const closeMenu = () => {
    mobileMenu.classList.remove("open");
  };

  menuIcon.addEventListener("click", (e) => {
    e.stopPropagation();
    mobileMenu.classList.toggle("open");
  });

  document.addEventListener("click", (event) => {
    if (
      !menuIcon.contains(event.target) &&
      !mobileMenu.contains(event.target)
    ) {
      closeMenu();
    }
  });

  const mobileMenuLinks = document.querySelectorAll(".mobile-menu-links a");
  mobileMenuLinks.forEach((link) => {
    link.addEventListener("click", closeMenu);
  });

  window.addEventListener("resize", closeMenu);
  window.addEventListener("scroll", closeMenu);

  let lastScrollY = window.scrollY;
  const header = document.querySelector(".header-container");

  window.addEventListener("scroll", () => {
    const SCROLL_THRESHOLD = 10;
    const currentScrollY = window.scrollY;
    if (Math.abs(currentScrollY - lastScrollY) < SCROLL_THRESHOLD) return;

    // Siempre visible en el top
    if (currentScrollY <= 0) {
      header.classList.remove("hide");
      lastScrollY = currentScrollY;
      return;
    }

    // Scroll hacia abajo → ocultar
    if (currentScrollY > lastScrollY) {
      header.classList.add("hide");
    }

    // Scroll hacia arriba → mostrar
    if (currentScrollY < lastScrollY) {
      header.classList.remove("hide");
    }

    lastScrollY = currentScrollY;
  });
</script>
