---
import Chip from "@components/Chip.astro";
import {
  React,
  Nextdotjs,
  Astro as AstroAsset,
  Nodedotjs,
  Flutter,
  Dart,
  Git,
  Figma,
  Kotlin,
  Html5,
  Css,
  Javascript,
  Typescript,
  Cplusplus,
  Rust,
  Python,
  Nestjs,
  Github,
  Githubpages,
  Vercel,
  Neovim,
  Dotnet,
  Xcode,
  Swift,
  Androidstudio,
  Eslint,
  Prettier,
  Jest,
} from "simple-icons-astro";

type Tech =
  | "React"
  | "Astro"
  | "React Native"
  | "Next.JS"
  | "HTML"
  | "CSS"
  | "Typescript"
  | "Javascript"
  | "Dart"
  | "Flutter"
  | "Node"
  | "Git"
  | "Figma"
  | "Kotlin"
  | "CPlusplus"
  | "Rust"
  | "Python"
  | "Nestjs"
  | "Github"
  | "GithubPages"
  | "Vercel"
  | "NeoVim"
  | "Dotnet"
  | "Xcode"
  | "Swift"
  | "Eslint"
  | "Prettier"
  | "Jest"
  | "Androidstudio";

interface TechConfig {
  icon: any;
  text: string;
}

const TechSettings: Record<Tech, TechConfig> = {
  React: { icon: React, text: "React" },
  Astro: { icon: AstroAsset, text: "Astro" },
  "React Native": { icon: React, text: "React Native" },
  "Next.JS": { icon: Nextdotjs, text: "Next.JS" },
  HTML: { icon: Html5, text: "HTML" },
  CSS: { icon: Css, text: "CSS" },
  Typescript: { icon: Typescript, text: "Typescript" },
  Javascript: { icon: Javascript, text: "Javascript" },
  Dart: { icon: Dart, text: "Dart" },
  Flutter: { icon: Flutter, text: "Flutter" },
  Node: { icon: Nodedotjs, text: "Node" },
  Git: { icon: Git, text: "Git" },
  Figma: { icon: Figma, text: "Figma" },
  Kotlin: { icon: Kotlin, text: "Kotlin" },
  CPlusplus: { icon: Cplusplus, text: "C++" },
  Rust: { icon: Rust, text: "Rust" },
  Python: { icon: Python, text: "Python" },
  Nestjs: { icon: Nestjs, text: "Nest.JS" },
  Vercel: { icon: Vercel, text: "Vercel" },
  Github: { icon: Github, text: "Github" },
  GithubPages: { icon: Githubpages, text: "Github Pages" },
  Dotnet: { icon: Dotnet, text: ".NET" },
  NeoVim: { icon: Neovim, text: "NeoVim" },
  Xcode: { icon: Xcode, text: "Xcode" },
  Eslint: { icon: Eslint, text: "ESLint" },
  Prettier: { icon: Prettier, text: "Prettier" },
  Jest: { icon: Jest, text: "Jest" },
  Swift: { icon: Swift, text: "Swift" },
  Androidstudio: { icon: Androidstudio, text: "Android Studio" },
};

interface Props {
  iconSize?: number;
  tech: Tech;
}

const { iconSize = 16, tech } = Astro.props;
const { text, icon: Icon } = TechSettings[tech];
---

<Chip text={text}>
  <Icon slot="icon" size={iconSize} />
</Chip>
